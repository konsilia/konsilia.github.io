{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["esnext"]
    },
    "include": ["./*.ts"],
    "exclude": ["node_modules"]
}
